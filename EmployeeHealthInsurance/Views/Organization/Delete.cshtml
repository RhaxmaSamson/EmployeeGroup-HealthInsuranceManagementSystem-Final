@model EmployeeHealthInsurance.Models.Organization

@{
    ViewData["Title"] = "Delete Organization";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Delete Organization</h3>
    </div>
    <div class="card-body">
        <h4 class="text-danger">Are you sure you want to delete this?</h4>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.OrganizationName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.OrganizationName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ContactPerson)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ContactPerson)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ContactEmail)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ContactEmail)
            </dd>
       
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="OrganizationId" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
