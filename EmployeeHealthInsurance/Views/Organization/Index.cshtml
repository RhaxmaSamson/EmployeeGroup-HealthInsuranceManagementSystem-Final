@model IEnumerable<EmployeeHealthInsurance.Models.Organization>

@{
    ViewData["Title"] = "Organizations";
}

<div class="card shadow-sm mt-4">
    <div class="card-header">
        <h3 class="mb-0">
            <i class="bi bi-building me-2"></i>
            All Organizations
        </h3>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            @* <div>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>
                        Create New Organization
                    </a>
                }
            </div> *@
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Organization Name</th>
                        <th>Contact Person</th>
                        <th>Contact Email</th>
                        <th>Contact Phone</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.OrganizationName)</strong>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ContactEmail))
                                {
                                    <a href="mailto:@item.ContactEmail" class="text-decoration-none">
                                        <i class="bi bi-envelope me-1"></i>
                                        @Html.DisplayFor(modelItem => item.ContactEmail)
                                    </a>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ContactPhone))
                                {
                                    <a href="tel:@item.ContactPhone" class="text-decoration-none">
                                        <i class="bi bi-telephone me-1"></i>
                                        @Html.DisplayFor(modelItem => item.ContactPhone)
                                    </a>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Address))
                                {
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Address)</small>
                                }
                            </td>
                            <td class="d-flex gap-2">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.OrganizationId" class="btn btn-sm btn-primary"> 
                                        <i class="bi bi-pencil me-1"></i>
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.OrganizationId" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this organization?');">
                                        <i class="bi bi-trash me-1"></i>
                                        Delete
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>