@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-white d-flex align-items-center">
                <i class="bi bi-person-circle me-2"></i>
                Hello @UserManager.GetUserName(User)!
            </span>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Auth" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button id="logout" type="submit" class="nav-link btn btn-link text-white d-flex align-items-center">
                    <i class="bi bi-box-arrow-right me-1"></i>
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white d-flex align-items-center" id="login" asp-controller="Auth" asp-action="Index">
                <i class="bi bi-box-arrow-in-right me-1"></i>
                Login
            </a>
        </li>
    }
</ul>