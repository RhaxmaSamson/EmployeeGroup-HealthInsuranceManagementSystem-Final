
@model EmployeeHealthInsurance.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="card mt-4 shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Delete Employee</h3>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this employee?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Designation</dt>
            <dd class="col-sm-9">@Model.Designation</dd>

            <dt class="col-sm-3">Organization</dt>
            <dd class="col-sm-9">@Model.OrganizationName</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmployeeId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>