
@model IEnumerable<EmployeeHealthInsurance.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">All Employees</h3>
    </div>
    <div class="card-body">
        @if (User.IsInRole("HRManager"))
        {
            <p>
                <a asp-action="Register" class="btn btn-success">Register New Employee</a>
            </p>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Designation)</th>
                    <th>@Html.DisplayNameFor(model => model.OrganizationName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrganizationName)</td>
                        <td class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-info">Details</a>
                            @if (User.IsInRole("HRManager"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>