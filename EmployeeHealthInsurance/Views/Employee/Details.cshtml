@model EmployeeHealthInsurance.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">Employee Profile</h3>
            </div>
            <div class="card-body">
                @if (TempData["NewEmployeeTempPassword"] != null)
                {
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-key me-2"></i>
                        <div>
                            Temporary password for this employee: <strong>@TempData["NewEmployeeTempPassword"]</strong>
                        </div>
                    </div>
                }
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-3">Phone</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-3">Designation</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Designation)</dd>

                    <dt class="col-sm-3">Organization</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.OrganizationName)</dd>
                </dl>
            </div>
            <div class="card-footer text-muted">
                <a asp-action="List" class="btn btn-secondary">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning ms-2">Edit</a>
                <a asp-controller="Enrollment" asp-action="ByEmployee" asp-route-employeeId="@Model.EmployeeId" class="btn btn-outline-primary ms-2">View Enrollments</a>
            </div>
        </div>
    </div>
</div>