@model EmployeeHealthInsurance.DTOs.ClaimDto

@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">Submit Insurance Claim</h3>
            </div>
            <div class="card-body">
                <form asp-action="Submit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EnrollmentId"></label>
                        <input asp-for="EnrollmentId" class="form-control" />
                        <span asp-validation-for="EnrollmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClaimAmount"></label>
                        <input asp-for="ClaimAmount" class="form-control" />
                        <span asp-validation-for="ClaimAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClaimReason"></label>
                        <textarea asp-for="ClaimReason" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ClaimReason" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-info btn-block">Submit Claim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}