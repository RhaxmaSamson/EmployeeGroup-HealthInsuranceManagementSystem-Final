@model IEnumerable<EmployeeHealthInsurance.Models.Claim>

@{
    ViewData["Title"] = "Claims List";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-info text-white">
        <h3 class="mb-0">All Claims</h3>
    </div>
    <div class="card-body">
        @if (User.IsInRole("Employee"))
        {
            <p>
                <a asp-action="Submit" class="btn btn-primary">Submit New Claim</a>
            </p>
        }
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Enrollment ID</th>
                    <th>Claim Amount</th>
                    <th>Reason</th>
                    <th>Claim Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ClaimId)</td>
                        <td>@Html.DisplayFor(modelItem => item.EnrollmentId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClaimAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClaimReason)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClaimDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClaimStatus)</td>
                        <td class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.ClaimId" class="btn btn-sm btn-info">Details</a>
                            @if (User.IsInRole("HRManager"))
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@item.ClaimId" method="post" class="d-inline">
                                    <input type="hidden" name="status" value="APPROVED" />
                                    <button type="submit" class="btn btn-sm btn-success">Quick Approve</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>