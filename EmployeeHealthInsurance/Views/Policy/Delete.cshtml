@model EmployeeHealthInsurance.Models.Policy

@{
    ViewData["Title"] = "Delete Policy";
}

<div class="card mt-4 shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Delete Policy</h3>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this policy?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3">Policy Name</dt>
            <dd class="col-sm-9">@Model.PolicyName</dd>

            <dt class="col-sm-3">Coverage Amount</dt>
            <dd class="col-sm-9">@Model.CoverageAmount</dd>

            <dt class="col-sm-3">Premium Amount</dt>
            <dd class="col-sm-9">@Model.PremiumAmount</dd>

            <dt class="col-sm-3">Policy Type</dt>
            <dd class="col-sm-9">@Model.PolicyType</dd>
        </dl>

        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="PolicyId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
