@model IEnumerable<EmployeeHealthInsurance.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollment List";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Your Enrollments</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Enrollment ID</th>
                    <th>Employee ID</th>
                    <th>Policy ID</th>
                    <th>Enrollment Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EnrollmentId</td>
                        <td>@item.EmployeeId</td>
                        <td>@item.PolicyId</td>
                        <td>@item.EnrollmentDate</td>
                        <td>@item.Status</td>
                        <td>
                            <form asp-action="Cancel" asp-route-id="@item.EnrollmentId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>