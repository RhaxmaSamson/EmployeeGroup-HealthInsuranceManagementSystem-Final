@model EmployeeHealthInsurance.DTOs.EnrollmentDto

@{
    ViewData["Title"] = "Submit Enrollment";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">Submit Enrollment</h3>
            </div>
            <div class="card-body">
                <form asp-action="Enroll">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmployeeId"></label>
                        <input asp-for="EmployeeId" class="form-control" />
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="PolicyId"></label>
                        <input asp-for="PolicyId" class="form-control" />
                        <span asp-validation-for="PolicyId" class="text-danger"></span>
                    </div> *@

                    <div class="form-group">
                        <label asp-for="PolicyId"></label>
                        <select asp-for="PolicyId" class="form-control" asp-items="ViewBag.PolicyList">
                            <option value="">--Select Policy</option>
                        </select>
                        <span asp-validation-for="PolicyId" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-info btn-block">Submit Enrollment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}